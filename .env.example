# Arc Spending Proofs - Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# PROVER CONFIGURATION
# =============================================================================

# Direct prover URL (optional - if not set, uses /api/prove proxy)
# Set this to your hosted prover service URL
NEXT_PUBLIC_PROVER_URL=https://prover.yourdomain.com

# Backend prover URL for API proxy (server-side only)
PROVER_BACKEND_URL=http://localhost:3001

# =============================================================================
# ARC BLOCKCHAIN
# =============================================================================

# Arc Testnet RPC
NEXT_PUBLIC_ARC_RPC=https://rpc.testnet.arc.network

# Contract Addresses (Arc Testnet)
NEXT_PUBLIC_PROOF_ATTESTATION=0xBE9a5DF7C551324CB872584C6E5bF56799787952
NEXT_PUBLIC_ARC_AGENT=0x982Cd9663EBce3eB8Ab7eF511a6249621C79E384

# USDC Token Address on Arc Testnet
NEXT_PUBLIC_USDC_ADDRESS=0x...

# SpendingGate Contract (if deployed)
NEXT_PUBLIC_SPENDING_GATE_ADDRESS=0x...

# =============================================================================
# WALLET CONNECT
# =============================================================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# =============================================================================
# CIRCLE PROGRAMMABLE WALLETS (Server-side - keep secret!)
# =============================================================================

# Circle API Key (from Circle Developer Console)
CIRCLE_API_KEY=your_circle_api_key

# Circle App ID (public)
NEXT_PUBLIC_CIRCLE_APP_ID=your_circle_app_id

# Circle Wallet Set ID
NEXT_PUBLIC_CIRCLE_WALLET_SET_ID=your_wallet_set_id

# Circle USDC Token ID for Arc
NEXT_PUBLIC_CIRCLE_USDC_TOKEN_ID=your_usdc_token_id

# =============================================================================
# JOLT ATLAS (if using external service)
# =============================================================================

# Jolt Atlas API URL (alternative prover)
NEXT_PUBLIC_JOLT_ATLAS_URL=http://localhost:3001
